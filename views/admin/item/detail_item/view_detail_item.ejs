<script>
  $(document).ready(function () {
    $('#dataTableActivity').DataTable();
  })
  $('#dataTableActivity').on('click','.button-update',function(){
    const id = $(this).data('id')
    const nameActivity = $(this).data('nameactivity')
    const type = $(this).data('type')
    const itemId = $(this).data('itemid')
    $('.id').val(id)
    $('.nameActivity').val(nameActivity)
    $('.type').val(type)
    $('.itemId').val(itemId)
    $('#edit-modal-activity').modal('show');
  })
    
    $('#dataTable').on('click','.button-update',function(){
      const id = $(this).data('id')
      const nameFeature = $(this).data('namefeature')
      const qty = $(this).data('qty')
      const itemId = $(this).data('itemid')
      $('.id').val(id)
      $('.nameFeature').val(nameFeature)
      $('.qty').val(qty)
      $('.itemId').val(itemId)
      $('#edit-modal').modal('show');
  })
</script>